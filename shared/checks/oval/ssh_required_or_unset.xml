<def-group>

  <definition class="compliance" id="ssh_required_or_unset" version="1">
    <metadata>
      <title>ssh is required to be installed or requirement not set</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>If ssh is required, we check it is installed. If SSH requirement is unset, we are good.</description>
    </metadata>
    <criteria comment="SSH required or not set" operator="OR">
      <criterion test_ref="test_ssh_required" />
      <extend_definition comment="SSH requirement is unset"
      definition_ref="ssh_requirement_unset" />
    </criteria>
  </definition>

  <ind:variable_test id="test_ssh_required"
  comment="Verify if Profile set Value ssh_required as required"
  check="all" check_existence="at_least_one_exists" version="1">
    <ind:object object_ref="object_ssh_required" />
    <ind:state state_ref="state_ssh_required" />
  </ind:variable_test>
  <ind:variable_object id="object_ssh_required" version="1">
    <ind:var_ref>ssh_required</ind:var_ref>
  </ind:variable_object>
  <ind:variable_state id="state_ssh_required" version="1">
      <ind:value operation="equals" datatype="int">2</ind:value>
  </ind:variable_state>

  <external_variable comment="May be defined by Profiles to explicitly say if ssh is required or not" datatype="int"
  id="ssh_required" version="1" />
</def-group>
